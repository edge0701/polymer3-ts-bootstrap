{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "classes": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "html"
    ],
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "arrow-body-style": ["error", "as-needed"],
        "brace-style": "error",
        "indent": [2, 2],
        "no-console": "off",
        "no-var": "error",
        "semi": "error",
        "strict": "error"
    }
}